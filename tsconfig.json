{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./release/esm",
    "target": "es6",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "types": [
      "core-js",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "spec",
    "release"
  ]
}
